@model CourseWorkMVC.Models.Group

@{
    ViewData["Title"] = "Добавить группу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Добавить группу</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="BeginDate" class="control-label"></label>
                <input asp-for="BeginDate" class="form-control" />
                <span asp-validation-for="BeginDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Major" class="control-label"></label>
                @Html.DropDownListFor(model => model.MajorId, ViewBag.AllMajors as SelectList)
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Добавить" class="btn btn-dark" />
                <a class="btn btn-danger" asp-action="Index">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
